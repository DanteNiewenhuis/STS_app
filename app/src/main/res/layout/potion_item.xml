<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/potion_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/potion_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="PotionName"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/potion_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/potion_description"
        android:layout_width="151dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:text="Description"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/potion_img"
        app:layout_constraintTop_toBottomOf="@+id/potion_name" />

    <RatingBar
        android:id="@+id/your_potion_rating"
        style="@style/foodRatingBar"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:rating="3.5"
        android:scaleX="0.5"
        android:stepSize="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/avg_potion_rating"
        style="@style/foodRatingBar"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:rating="3.5"
        android:scaleX="0.5"
        android:stepSize="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_potion_rating" />
</android.support.constraint.ConstraintLayout>